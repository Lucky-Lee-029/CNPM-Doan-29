<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>E-Learning</title>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet'
    type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Custom styles for this template -->
  <link href="/css/bidder-watchlist.css" rel="stylesheet">

</head>

<style type="text/css">
  .bar-up {width: 60%; height: 18px; background-color: #4CAF50;}
  .bar-down {width: 40%; height: 18px; background-color: #2196F3;}

</style>

<body id="page-top">
  <% include ../partial-layout/header%>

  <!-- Header -->
  <header class="masthead">
    <div class="container">
      <% include ../partial-layout/search-bar%>
    </div>
  </header>

  <!-- container -->
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-4">
        <div class="profile-sidebar">
          <!-- card profile -->
          <div class="card">
            <img src="/img/profile/user-<%= user.id%>.jpg" alt="" style="width:100%">
            <h1 class="mt-3"><%= user.name %></h1>
            <!--   <p class="title">CEO & Founder, Example</p> -->
            <p><a href="#"><i class="fa fa-dribbble"></i></a>
              <a href="#"><i class="fa fa-twitter"></i></a>
              <a href="#"><i class="fa fa-linkedin"></i></a>
              <a href="#"><i class="fa fa-facebook"></i></a></p>
            <div>
              <button class="btn-contact">Liên hệ</button>
            </div>
            <div>
              <hr class="featurette-divider ">
              <span class="heading"><b>User Rating</b></span>
              <br>

              <div class="row-rate">
                <div class="side">
                  <div><a><i class="far fa-thumbs-up"></i></a></div>
                </div>
                <div class="middle">
                  <div class="bar-container">
                    <div class="bar-up"></div>
                  </div>
                </div>

              </div>
              <div class="row-rate">
                <div class="side">
                  <div><a><i class="far fa-thumbs-down"></i></a></div>
                </div>
                <div class="middle">
                  <div class="bar-container">
                    <div class="bar-down"></div>
                  </div>
                </div>
              </div>
            </div>
            <div>
              <hr class="featurette-divider ">
              <p><b>Lạc nhau có phải muôn đời</b></p>
              <button data-toggle="modal" data-target="#become-seller" class="btn-contact">Trở thành người
                dạy</button>
            </div>

            <div>
              <hr class="featurette-divider ">
              <p><button><a class="account-setting" href="bidder-account-setting">Chỉnh sửa thông
                    tin</a></button></p>
            </div>
          </div>
        </div>
      </div>



      <div class="col-lg-8">
        <!-- menu -->
        <div class="topnav">
          <a class="active" href="/student/student-history">Lịch sử</a>
          <a href="/student/student-acount">Tài khoản</a>
          <a href="/student/student-class">Khóa học đang mở</a>
          <a href="/student/student-my-class">Khóa học của tôi</a>
          <!-- <a href="#contact">Account setting</a> -->
        </div>
        <div class="profile-content">
          <div class="left-border">
            <h3><b>Khóa học của tôi</b></h3>
          </div>
          <!-- tab menu content -->
          <!-- Main View -->
          <section class="bg-light page-section" id="list">
            <div class="container">
              <div class="row">
                <% items.forEach(function(item) { %>
                <div class="col-md-4 col-sm-6 list-item">
                  <a class="list-link" data-toggle="modal" href="#P<%= item.id %>">
                    <div class="list-hover">
                      <div class="list-hover-content">
                        <i class="fas fa-plus fa-3x"></i>
                      </div>
                    </div>
                    <img class="img-fluid" src="/img/list/<%= item.id %>-thumbnail.jpg" alt="">
                  </a>
                  <div class="list-caption">
                    <h4><%= item.name %></h4>
                    <a class="text-muted a-currentbid">Current bid: </a>
                    <a class=" text-muted a-price">$<%= item.price %></a>
                    <hr class="featurette-divider ">
                    <span class="dot"><img class="avatar" src="/img/profile/user-<%= item.holdId %>.jpg">
                      ****<%= item.owner.substring(4,20) %></span>
                  </div>
                </div>
                <% }); %>
              </div>


            </div>
          </section>
        </div>
      </div>
      <!-- list Modals -->
    </div>
  </div>

  <!-- list Modals -->
  <!-- Modal -->
  <input class="none" type="text" id="userId" value="<%= user.id %>">
  <% items.forEach(function(item) { %>
  <div class="list-modal modal fade" id="P<%= item.id %>" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="close-modal" data-dismiss="modal">
          <div class="lr">
            <div class="rl"></div>
          </div>
        </div>
        <div class="container">
          <div class="row featurette ">
            <div class="col-lg-5 mx-auto">
              <div class="modal-body">
                <img class="img-fluid" src="/img/thumbnail/<%= item.id %>-thumbnail.jpg">
                <div>
                  <!-- <button type="button" class="btn-bid btn-outline-warning"><i class="fas fa-search"></i></button> -->

                  <input class="none productId" type="text" value="<%= item.id %>">
                  <button type="button" class="btn-bid btn-outline-warning addWatchList"><i
                      class="far fa-heart"></i></button>
                  <button type="button" class="btn-bid btn-outline-warning"><a
                      href="/student/detail-product?id=<%= item.id %>" <i class="fas fa-gavel"></i></a>
                  </button>
                </div>
              </div>
            </div>
            <div class="col-lg-7 mx-auto">
              <h1 class=" product-title ">
                <%= item.name %>
              </h1>
              <h1 class=" product-price mt-4"> Giá:
                <%= item.price %>
              </h1>
              <hr class="featurette-divider">
              <!-- Project Details Go Here -->
              <ul class="list-inline content mx-auto">
                <li>Ngày đăng: <%= item.create %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }); %>

  <!-- end modal product -->
  <!-- request becomeseller modal -->
  <div class="modal fade" id="become-seller" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <!-- INPUT CONTAINER -->
        <div class="input-container">
          <!-- <input class="none"  type="text" id="userId" value="<%= user.id %>"> -->
          <div class="modal-header">
            <h4 class="modal-title">Bạn có muốn trở thành người dạy không?</h4>
            <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
          </div>
          <!--   <div class="modal-body">
                        <p>Pleases wait for reponse.</p>
                    </div> -->
          <div class="modal-footer">
            <button id="cancle" class="btn btn-warning" data-dismiss="modal" value="OK">Không</button>
            <button id="submit" type="button" class="btn btn-warning" data-dismiss="modal">Có</button>
            <!-- <button type="button" class="btn btn-warning" data-dismiss="modal">OK</button> -->
          </div>

        </div>
        <!-- /INPUT CONTAINER -->
      </div>
    </div>
  </div>
  <!-- /request becomeseller modal -->
  <!-- Footer -->
  <% include ../partial-layout/footer%>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/bidder-watchlist.js"></script>
</body>

</html>