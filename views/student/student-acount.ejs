<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>E-Leaning</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet'
        type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom styles for this template -->
    <link href="/css/bidder-wonproduct.css" rel="stylesheet">

    <style type="text/css">
        .bar-up {
            width: <%=percentLike %>%;
            height: 18px;
            background-color: #4CAF50;
        }

        .bar-down {
            width: <%=percentDislike %>%;
            height: 18px;
            background-color: #2196F3;
        }
    </style>

</head>



<body id="page-top">
    <% include ../partial-layout/header%>
    <!-- Header -->
    <header class="masthead">
        <div class="container">
            <div class="input-group search-bar text-center">
                <div class="input-group-prepend dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown">
                        <i class="fas fa-filter"></i>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Search by name</a>
                        <a class="dropdown-item" href="#">Search by category</a>
                    </div>
                </div>
                <input type="text" class="form-control" placeholder="Search your goods">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="button"><i class="fa fa-search"></i></button>
                </div>

            </div>
            <br> <br>
        </div>
    </header>

    <!-- container -->
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="profile-sidebar">
                    <!-- card profile -->
                    <div class="card">
                        <img src="/img/profile/user-<%= user.id%>.jpg" alt="" style="width:100%">
                        <h1 class="mt-3"><%= user.name %></h1>
                        <!--   <p class="title">CEO & Founder, Example</p> -->
                        <p><a href="#"><i class="fa fa-dribbble"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a></p>
                        <div>
                            <button class="btn-contact">Liên hệ</button>
                        </div>
                        <div>
                            <hr class="featurette-divider ">
                            <span class="heading"><b>User Rating</b></span>
                            <br>
                            <span class="heading">Point: <%= point %></span>
                            <div class="row-rate">
                                <div class="side">
                                    <div><a><i class="far fa-thumbs-up"></i></a></div>
                                </div>
                                <div class="middle">
                                    <div class="bar-container">
                                        <div class="bar-up"></div>
                                    </div>
                                </div>
                                <div class="side right">
                                    <div><%= totalLike.totalLike %></div>
                                </div>
                            </div>
                            <div class="row-rate">
                                <div class="side">
                                    <div><a><i class="far fa-thumbs-down"></i></a></div>
                                </div>
                                <div class="middle">
                                    <div class="bar-container">
                                        <div class="bar-down"></div>
                                    </div>
                                </div>
                                <div class="side right">
                                    <div><%= totalDislike.totalDisLike %></div>

                                </div>
                            </div>
                        </div>
                        <div>
                            <hr class="featurette-divider ">
                            <p><b>Lạc nhau có phải muôn đời</b></p>
                            <button data-toggle="modal" data-target="#become-seller" class="btn-contact">Trở thành người
                                dạy</button>
                        </div>

                        <div>
                            <hr class="featurette-divider ">
                            <p><button><a class="account-setting" href="bidder-account-setting">Chỉnh sửa thông
                                        tin</a></button></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- id user -->
            <input class="none" type="text" id="userId" value="<%= user.id %>">
            <!-- request becomeseller modal -->
            <div class="modal fade" id="become-seller" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <!-- INPUT CONTAINER -->
                        <div class="input-container">

                            <div class="modal-header">
                                <h4 class="modal-title">Bạn có muốn trở thàn người dạy?</h4>
                                <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                            </div>
                            <!--   <div class="modal-body">
                            <p>Pleases wait for reponse.</p>
                        </div> -->
                            <div class="modal-footer">
                                <button id="cancle" class="btn btn-warning" data-dismiss="modal"
                                    value="OK">Không</button>
                                <button id="submit" type="button" class="btn btn-warning"
                                    data-dismiss="modal">Có</button>
                                <!-- <button type="button" class="btn btn-warning" data-dismiss="modal">OK</button> -->
                            </div>
                        </div>
                        <!-- /INPUT CONTAINER -->
                    </div>

                </div>
            </div>
            <!-- /request becomeseller modal -->
            <div class="col-lg-8">
                <!-- menu -->
                <div class="topnav">
                    <a href="/student/student-history/1">Lịch sử</a>
                    <a class="active" href="/student/student-acount/1">Tài khoản</a>
                    <a href="/student/student-class/1">Khóa học đang mở</a>
                    <a href="/student/student-my-class/1">Khóa học của tôi</a>
                    <!-- <a href="#contact">Account setting</a> -->
                </div>
                <div class="profile-content">
                    <div class="left-border">
                        <h3><b>Tài khoản</b></h3>
                    </div>
                    <!-- tab menu content -->
                    <!-- Main View -->
                    <section class="bg-light page-section" id="list">
                        <div class="container">
                            <% items.forEach(function(item) { %>
                            <div class="card-deck mg-100 col-6 align-self-center">
                                <div class="card bg-success text-white">
                                    <h4 class="card-title">Thông tin tài khoản</h4>
                                    <div class="card-body text-left">
                                        <div>Tên:<%= item.name%> </div>
                                        <div>Số tài khoản:<%= item.number%> </div>
                                        <div>Ngân hàng:<%= item.bank%> </div>
                                        <div>Chi nhánh:<%= item.address%> </div>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="card-deck col-6 align-self-center">
                                <div class="card bg-success text-white">
                                    <h4 class="card-title">Ví khả dụng</h4>
                                    <div class="card-body text-left">
                                        <div>Số dư hiện có: </div>
                                    </div>
                                    <div>
                                        <button class="btn btn-info">Nạp tài khoản</button>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </section>
                </div>

            </div>
            <!-- list Modals -->
            <!-- review up modal 1 -->

        </div>

        <!-- Modal 1 -->


        <!-- Footer -->
        <% include ../partial-layout/footer%>



        <!-- Bootstrap core JavaScript -->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Plugin JavaScript -->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>


        <!-- Custom scripts for this template -->
        <script src="/js/bidder-wonproduct.js"></script>



</body>

</html>